<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_pais"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/bandeira"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nome_pais"
        app:layout_constraintBottom_toBottomOf="@id/nome_pais"
        app:layout_constraintEnd_toStartOf="@id/nome_pais"
        android:contentDescription="@string/res_bandeira_do_pais" />

    <TextView
        android:id="@+id/nome_pais"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/bandeira"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:layout_marginStart="16dp"
        android:text=""/>

    <View
        android:id="@+id/divisoria_paises"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/nome_pais"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />



</androidx.constraintlayout.widget.ConstraintLayout>